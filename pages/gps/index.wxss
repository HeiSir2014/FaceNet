/* pages/gps/index.wxss */
.container{
  align-items: left;
  padding: 20rpx;
  background-color: #fff;
  position: relative;
  box-sizing:border-box;
  height:100%;
}
.mac_list{
  width: 100%;
  margin: 0;
  position: relative;
  height:90%;
  margin-bottom: 100rpx;
  box-sizing:border-box;
}
.mac_item {
  width: 100%;
  position: relative;
  border-bottom: 1px solid #e7e7e7;
  height: 120rpx;
  line-height: 120rpx;
}

.mac_item .status{
  position: absolute;
  top:20%;
  width: 70rpx;
  height: 64rpx;
}

.mac_item .title{
  position: absolute;
  top:0rpx;
  left: 100rpx;
  line-height: 60rpx;
  font-weight: 500;
}
.mac_item .subtitle{
  position: absolute;
  left: 100rpx;
  top:60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  max-width: 65%;
  color: #999999;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.mac_item .elec{
  position: absolute;
  right: 10rpx;
}

map{
  height: 600rpx;
}


.button-add {
  position: fixed;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  bottom: 10rpx;
  box-sizing:border-box;
  margin: 0 auto;
  left: 5%;
}
