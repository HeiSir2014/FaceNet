/* pages/gps/index.wxss */
.container{
  align-items: left;
  padding: 20rpx;
  background-color: #fff;
}
.mac_list{
  width: 100%;
  margin: 20rpx 0;
}
.mac_item {
  width: 100%;
  position: relative;
  border-bottom: 1px solid #e7e7e7;
  height: 120rpx;
  line-height: 120rpx;
}

.mac_item .status{
  position: absolute;
  top:20%;
  width: 64rpx;
  height: 64rpx;
}

.mac_item .title{
  position: absolute;
  top:0rpx;
  left: 80rpx;
  line-height: 60rpx;
  font-weight: 500;
}
.mac_item .subtitle{
  position: absolute;
  left: 80rpx;
  top:60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  max-width: 65%;
  color: #999999;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.mac_item .elec{
  position: absolute;
  right: 10rpx;
}

map{
  height: 600rpx;
}


.button-add {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
}
