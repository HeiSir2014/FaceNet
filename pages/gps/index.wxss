/* pages/gps/index.wxss */
body{
  background-color: #40A6FF;
}
page{
  height: 100%;
  background-color: #40A6FF;
}

.container{
  align-items: center;
  position: relative;
  box-sizing:border-box;
  height: 100%;
  background-color: #efefef;
  overflow-y: auto;
}

.person{
  width: 100%;
  display:block;
  flex-direction: column;
  align-items: center;
  text-align: center;
  background-color: #40A6FF;
  color: #fff;
  box-sizing:border-box;
  padding: 40rpx;

}

.person .pichead{
  width: 120rpx;
  height: 120rpx;
  display: block;
  margin-left: auto;
  margin-right: auto;
}
.person .nick{
  height: 60rpx;
  line-height: 60rpx;
}

.mac_list{
  width: 100%;
  margin: 0;
  position: absolute;
  box-sizing:border-box;
  top: 250rpx;
  text-align: center;
  padding-top:10rpx;
  padding-bottom:20rpx;
}

.mac_list .nomac{
  display: block;
  width: calc(100% - 40rpx);
  border-radius: 10rpx;
  box-sizing: border-box;
  color: white;
  background-color: #ff8800;
  padding: 20rpx 0;
  position: absolute;
  left:20rpx;
}

.mac_item {
  position: relative;
  height: 270rpx;
  line-height: 270rpx;
  box-sizing: border-box;
  margin: 20rpx;
  background-color: #fff;
  color: #000;
}

.mac_item text{
  color: #40A6FF;
}

.mac_item .icon{
  position: absolute;
  left:20rpx;
  top:20rpx;
  width: 70rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.mac_item .control{
  position: absolute;
  right:20rpx;
  top:20rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.mac_item .leftList{
  color: #000;
}
.mac_item .title{
  position: absolute;
  top:  20rpx;
  left: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 16pt;
  text-align: left;
  color: #000;
}
.mac_item .time{
  position: absolute;
  left: 20rpx;
  top:100rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}

.mac_item .location{
  position: absolute;
  left: 20rpx;
  top:200rpx;
  max-width: 85%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  text-align: left;
}

.mac_item .loctype{
  position: absolute;
  left: 20rpx;
  top:150rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}

.mac_item .speed{
  position: absolute;
  left: 70%;
  top:150rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}
.mac_item .elec{
  position: absolute;
  left: 70%;
  top:100rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}
.mac_item .btnLoc{
  position: absolute;
  right: 20rpx;
  top:200rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
}

map{
  height: 600rpx;
}


.button-add {
  width: calc(100% - 40rpx);
  height: 90rpx;
  line-height: 90rpx;
  box-sizing:border-box;
  border-radius: 10rpx;
  font-size: 12pt;
  
}

.tip{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 10pt;
  color: #687A9F;
  padding: 20rpx 0;
  box-sizing:border-box;
}