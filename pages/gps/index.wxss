/* pages/gps/index.wxss */
.container{
  background-color: #fff;
  align-items: left;
  padding: 20rpx;
}
.mac_list{
  width: 100%;
  margin: 20rpx 0;
}
.mac_item {
  width: 100%;
  position: relative;
  border-bottom: 1px solid #e7e7e7;
  height: 120rpx;
  line-height: 120rpx;
}

.mac_item .status{
  position: absolute;
  top:20%;
  width: 64rpx;
  height: 64rpx;
}

.mac_item .title{
  position: absolute;
  top:0rpx;
  left: 80rpx;
  line-height: 60rpx;
  font-weight: 500;
}
.mac_item .subtitle{
  position: absolute;
  left: 80rpx;
  top:60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  max-width: 65%;
  color: #999999;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.mac_item .elec{
  position: absolute;
  right: 10rpx;
}

map{
  height: 600rpx;
}


.button-add {
  width: 100rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.mac_add{
  position: relative;
  width: 80%;
  margin: 0 auto;

}

.mac_add button,.mac_add > input,.mac_add > view{
  height: 80rpx;
  line-height: 80rpx;
  margin-top:20rpx;
}

.sn_input{
  position: relative;
  width: 100%;
  height: 80rpx;
  margin: 0;
  border: 1px solid #b2b2b2;
  border-radius: 10rpx;
}

.input_name{
  border-radius: 10rpx;
  padding:0 10rpx;
  border: 1px solid #b2b2b2;
  width: 100%;
  height: 80rpx;
  box-sizing:border-box;
}
.sn_input button{
  position: absolute;
  right: 5px;
  height: 60rpx;
  line-height: 60rpx;
  margin:10rpx 0;
  padding: 0 10rpx;
  box-sizing:border-box;
  background-color: none;
  font-weight: 100;
  border: 0px;
}
.sn_input button::after{
  content: ''
}

.sn_input input{
  position: absolute;
  width: 80%;
  height: 100%;
  padding:0 10rpx;
  box-sizing:border-box;
}