/* pages/gps/index.wxss */
page{
  background-color: #fff;
}

.container{
  align-items: center;
  position: relative;
  box-sizing:border-box;
  height: 100%;
}

.person{
  width: 100%;
  display:block;
  flex-direction: column;
  align-items: center;
  text-align: center;
  background-color: #40A6FF;
  color: #fff;
  box-sizing:border-box;
  padding: 40rpx;
}

.person .pichead{
  width: 120rpx;
  height: 120rpx;
  display: block;
  margin-left: auto;
  margin-right: auto;
}
.person .nick{
  height: 60rpx;
  line-height: 60rpx;
}

.mac_list{
  width: 100%;
  margin: 0;
  position: absolute;
  box-sizing:border-box;
  top: 250rpx;
  bottom: 160rpx;
  padding: 20rpx;
  text-align: center;
}

.mac_list .nomac{
  display: block;
  width: 100%;
  border: 1px solid #ff8800;
  padding: 20rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  color: white;
  background-color: #ff8800;
}

.mac_item {
  width: 100%;
  position: relative;
  border-bottom: 1px solid #e7e7e7;
  height: 120rpx;
  line-height: 120rpx;
}

.mac_item .status{
  position: absolute;
  left:0rpx;
  top:20%;
  width: 70rpx;
  height: 64rpx;
}

.mac_item .title{
  position: absolute;
  top:0rpx;
  left: 100rpx;
  line-height: 60rpx;
  font-weight: 500;
}
.mac_item .subtitle{
  position: absolute;
  left: 100rpx;
  top:60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  max-width: 65%;
  color: #999999;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.mac_item .elec{
  position: absolute;
  right: 10rpx;
  top:0rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #3FA5FF;
}
.mac_item .time{
  position: absolute;
  right: 10rpx;
  top:60rpx;
  line-height: 60rpx;
  font-size: 25rpx;
  color: #00B266;
}

map{
  height: 600rpx;
}


.button-add {
  position: fixed;
  width: calc(100% - 40rpx);
  height: 90rpx;
  line-height: 90rpx;
  bottom: 10rpx;
  box-sizing:border-box;
  border-radius: 10rpx;
  font-size: 12pt;
  
}

.tip{
  position: fixed;
  bottom: 120rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 10pt;
  color: gray;
}