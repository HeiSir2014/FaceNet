/* pages/gps/add.wxss */
page{
  background-color: #40A6FF;
}
.container{
  display: block;
  align-items: center;
  background-color: #fff;
  flex-direction: column;
  height: 100%;
  box-sizing: border-box;
}

.showtip{
  height: 250rpx;
  background-color: #40A6FF;
  box-sizing: border-box;
}

.mac_add{
  position: relative;
  width: 80%;
  margin: 0 auto;
  padding: 50rpx;
}

.mac_add .title{
  width: 100%;
  text-align: center;
}

.mac_add button,.mac_add > input,.mac_add > view,.mac_add > .type_input{
  height: 80rpx;
  line-height: 80rpx;
  margin-top:20rpx;
  font-size: 12pt;
}

.mac_add .error{
  width: 100%;
  text-align: center;
  color: red;
  font-size: 10pt;
}

.sn_input,.type_input,.buyer_input{
  position: relative;
  width: 100%;
  height:80rpx;
  margin: 0;
  border: 1px solid #b2b2b2;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing:border-box;
}

.buyer_input{
  align-items: center;
  text-align: center;
  color: #ff5902;
  border: 0px solid #ff5902;
}

.input_name{
  border-radius: 10rpx;
  border: 1px solid #b2b2b2;
  width: 100%;
  height: 80rpx;
  box-sizing:border-box;
  padding: 0 20rpx;
}

.sn_input image{
  position: absolute;
  right: 5px;
  width: 60rpx;
  height: 55rpx;
  margin:12rpx 0;
  box-sizing:border-box;
}

.buyer_input image{
  display: inline-block;
  width: 60rpx;
  height: 55rpx;
  margin:12rpx 0;
  box-sizing:border-box;
}

.sn_input input{
  position: absolute;
  width: 80%;
  height: 100%;
  box-sizing:border-box;
}

.type_input > .picker{
  position: absolute;
  width: 100%;
  display: inline-block;
  padding:0 10rpx;
}